version: '3'

services:

  musicstore:
    image: musicstore:1.0
    build:
      context: ./UI
      dockerfile: Dockerfile
    environment:
      - "ApiGateway=http://apigateway.api:8084"
    depends_on:
      - apigateway.api

  apigateway.api:
    image: gateway:1.0
    build:
      context: ./ApiGateway
      dockerfile: Dockerfile
    depends_on:
      - catalog.api
      - basket.api
      - ordering.api
    environment:
      - "Catalog=http://catalog.api:8082"
      - "Basket=http://basket.api:8083"
      - "Ordering=http://ordering.api:8085"

