@using MusicStore.Helper

@model StoreModelHelperClass

@{
    ViewBag.Title = "Browse Albums";
}
<div class="genre">
    <h3>
        <em>@Model.GenreName</em>
    </h3>

    <ul id="album-list" class="list-unstyled">
        @foreach (var item in Model.Result)
        {
            <li class="col-lg-2 col-md-2 col-sm-2 col-xs-4 container">
                <a asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">
                    @{
                        //var imageLink = $"~/Images/{album.AlbumArtUrl}";
                        var imageLink = $"~/Images/{MediumImageSelector.SetMediumGraphic(item.MediumName, item.AlbumArtUrl)}";
                    }
                    <img alt="@item.Title" src="@Url.Content(imageLink)" />
                    <h5 class="control-label">@item.Title</h5>
                    
                    
                  @*  <img src="~/Images/placeholder.png" class="img-responsive" />
                    <h5 class="control-label">@album.Title</h5>*@
                    
